<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:onClick="onBackPressed"
    tools:context=".main.common.PopWithWebViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onBackPressed"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/layout_pop_common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_corner4_white_normal"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/layout_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical" />

            <!-- 同意按钮区域 -->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/layout_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="@color/webview_btn_backgroud"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_dotted_line"
                    android:layerType="none" />

                <Button
                    android:id="@+id/btn_prototype_sure"
                    style="@style/btn_style_1_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:text="@string/common_agree"
                    app:layout_heightPercent="60%h"
                    app:layout_widthPercent="60%w" />
            </com.zhy.android.percent.support.PercentRelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:onClick="onBackPressed"
            android:scaleType="centerInside"
            android:src="@mipmap/close_btn_l" />

    </RelativeLayout>

</RelativeLayout>